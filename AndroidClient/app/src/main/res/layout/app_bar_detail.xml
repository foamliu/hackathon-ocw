<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/main_layout"
    android:background="@color/activity_bg_color"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:id="@+id/title_bar" style="@style/main_title_bar_style">
        <FrameLayout android:id="@+id/back_button_container"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent">
            <Button
                android:layout_gravity="center_vertical"
                android:id="@+id/backBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="left"
                android:background="@drawable/ic_keyboard_backspace_white_24dp"
                android:layout_alignParentLeft="true" />
        </FrameLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginEnd="60dp"
            android:layout_marginRight="60dp"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:id="@+id/titleToolBar"
            />
        <FrameLayout android:id="@+id/share_button_container"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp">
            <Button
                android:id="@+id/shareBtn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/ic_share_white_24dp"
                android:layout_gravity="center_vertical"
                />
        </FrameLayout>
    </RelativeLayout>
</RelativeLayout>


